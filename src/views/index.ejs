<html>
    <%- include('./partials/head') %>
    <body>
        <%- include('./partials/header') %>
        <main>
            <div class="banner">
                <p>
                    Cambiamos la forma de comprar un usado.
                    Vos eleg√≠ el tuyo, nosotros nos ocupamos del resto.
                </p>
            </div>
            <h2>Autos Destacados</h2>
            <div class="featured-cars">
                <% productos.forEach(producto => { %>
                    <a href="/products/product-detail/<%= producto.id %> ">
                        <article>
                            <img src="/images/products/<%= producto.img %> " alt="<%= producto.marca %> <%= producto.modelo %>">
                            <h3><%= producto.marca %> <%= producto.modelo %></h3>
                            <h4><%=producto.anio%> - <%=producto.kilometraje%>km - <%=producto.provincia%></h4>
                            <h4>$<%= producto.precio %> </h4>
                        </article>
                    </a>
                <% }) %>
            </div>
        </main>
        <%- include('./partials/footer') %>
        <script src="" async defer></script>
    </body>
</html>