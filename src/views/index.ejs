<html>
    <%- include('./partials/head', {title: "DrivIT", style: "index"}) %>
    <body>
        <%- include('./partials/header') %>
        <main>
            <div class="banner">
                <p>
                    Cambiamos la forma de comprar un usado.
                    Vos eleg√≠ el tuyo, nosotros nos ocupamos del resto.
                </p>
            </div>
            <h2>Autos Destacados</h2>
            <div class="featured-cars">
                <% productos.forEach(producto => { %>
                    <a href="/products/product-detail/<%=producto.id%>">
                        <article>
                            <img src="/images/products/<%=producto.image_path%>" alt="<%=producto.vehicles_models.model_brand.name%> <%=producto.vehicles_models.model_name%>">
                            <h3><%=producto.vehicles_models.model_brand.name%> <%=producto.vehicles_models.model_name%></h3>
                            <h4><%=producto.vehicles_models.year%> - <%=producto.kilometers%>km - <%=producto.location_province%></h4>
                            <h4>$<%=producto.price%></h4>
                        </article>
                    </a>
                <% }) %>
            </div>
        </main>
        <%- include('./partials/footer') %>
        <script src="" async defer></script>
    </body>
</html>