<html>
    <%- include('./partials/head', {title: "Login", style: "login_form"}) %>
    <body>
        <%- include('./partials/header') %>
        <main class="login">
            <h4>Inicia Sesión</h4>

            <form class="form" action="/user/login" method="POST" class="form">
                <h3 class="indicacion">Ingresá tus datos</h3>
                <p id="prueba">
                    <label id="definicion1" for="email">Email *</label>
                    <div><input class="campo" type="email" name="email" id="email" value=<%= locals.old && locals.old.email ? locals.old.email : null %> ></div>
                    <% if (locals.errors && locals.errors.email) { %>
                        <div>
                            <span><%= locals.errors.email.msg %> </span>
                        </div>
                    <% } %>
                </p>

                <p>
                    <label id="definicion2" for="password">Contraseña *</label>
                    <div><input class="campo" type="password" name="password" id="password" value=<%= locals.old && locals.old.password ? locals.old.password : null %>></div>
                    <% if (locals.errors && locals.errors.password) { %>
                        <div>
                            <span><%= locals.errors.password.msg %> </span>
                        </div>
                    <% } %>
                </p> 

                <p class="recuerdame">   
                    <input type="checkbox" name="terminos" id="terminos">
                    <label for="terminos">Recuerdame</label>
                </p>
                
                <p> 
                <input type="submit" class="inicio-sesion" name="inicio-sesion" value="Iniciar Sesión"> 
                </p>
            
            </form>

            <div class="registrate">
                <div>¿No tenés cuenta? </div>
                <a href="/user/register">Registrate</a></li>
            </div>





        </main>
        <%- include('./partials/footer') %>
        <script src="" async defer></script>
    </body>