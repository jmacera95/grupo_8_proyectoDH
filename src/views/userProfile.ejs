<html>
    <%- include('./partials/head', {title: "Profile", style: "user_profile"}) %>
    <body>
        <%- include('./partials/header') %>
        <main id="user-profile">
            <div>
                <h2>Mi Perfil</h2>
            </div>
            <div id="user-details">
                <article>
                    <h4><i class="far fa-user-circle"></i> Datos Personales</h4>
                    
                    <p><%= user.firstName %> <%= user.lastName %></p>
                    <p><%= user.phone %></p>
                    <p><%= user.email %></p>
                </article>
                <br>
                <article>
                    <h4><i class="fas fa-lock"></i> Contraseña</h4>
                    <p>* * * * * *</p>
                </article>
            </div>
            <% if (user.userType=="admin") { %>
                <form action="/products/create" method="GET">
                    <input type="submit" value="Crear Nuevo Producto">
                </form>
            <% } %>
            <form action="/user/logout" method="GET" id="user-logout-form">
                <i class="fa-solid fa-right-from-bracket"></i> <input type="submit" value="Cerrar Sesión">
            </form>
            <form action="/user/edit/<%= user.id %>" method="GET" id="user-logout-form">
                <i class="fa-solid fa-right-from-bracket"></i> <input type="submit" value="Editar">
            </form>
        </main>
        <%- include('./partials/footer') %>
        <script src="" async defer></script>
    </body>